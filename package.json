{
	"name": "uptime-tui",
	"private": true,
	"packageManager": "bun@1.3.3",
	"workspaces": ["packages/*"],
	"scripts": {
		"dev": "turbo dev",
		"build": "turbo build",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"db:generate": "turbo db:generate --filter=@uptime-tui/server",
		"db:migrate": "turbo db:migrate --filter=@uptime-tui/server",
		"db:push": "turbo db:push --filter=@uptime-tui/server",
		"typecheck": "turbo typecheck"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"turbo": "^2.3.3",
		"typescript": "^5.7.2"
	},
	"dependencies": {
		"superjson": "^2.2.6"
	}
}
