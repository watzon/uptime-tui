{
	"name": "@uptime-tui/cli",
	"version": "0.1.0",
	"private": false,
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/watzon/uptime-tui.git",
		"directory": "packages/tui-client"
	},
	"bin": {
		"uptime": "./dist/index.js"
	},
