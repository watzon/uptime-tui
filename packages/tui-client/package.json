		"ink-text-input": "^6.0.0",
		"react": "^18.3.1",
		"ws": "^8.18.0",
		"zod": "^3.24.1",
		"zustand": "^5.0.2"
	},
	"devDependencies": {
		"@types/asciichart": "^1.5.8",
		"@types/node": "^22.0.0",
		"@types/react": "^18.3.14",
		"@types/ws": "^8.5.13",
		"esbuild": "^0.24.0",
		"react-devtools-core": "^7.0.1",
		"tsx": "^4.19.0",
