{
	"name": "@uptime-tui/shared",
	"version": "0.1.0",
	"private": false,
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/watzon/uptime-tui.git",
		"directory": "packages/shared"
	},
	"exports": {
		".": {
			"types": "./src/index.ts",
			"default": "./src/index.ts"
		}
	},
	"publishConfig": {
		"exports": {
			".": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			}
		}
	},
	"files": ["dist"],
	"scripts": {
		"build": "esbuild src/index.ts --bundle --platform=node --format=esm --outfile=dist/index.js --packages=external && tsc --emitDeclarationOnly --outDir dist",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"esbuild": "^0.24.0",
		"typescript": "^5.7.2"
	}
}
